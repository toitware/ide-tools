{
    "name": "toit",
    "displayName": "Toit",
    "description": "Toit Programming Language Support",
    "publisher": "Toit",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:toit",
        "onView:toitView"
    ],
    "icon": "images/toitware_logo.png",
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
              {
                "id": "toit-view",
                "title": "Toit",
                "icon": "./resources/logo.svg"
              }
            ]
          },
          "views": {
			"toit-view": [
				{
					"id": "toitDeviceView",
					"name": "Devices",
					"contextualTitle": "Device Explorer",
                    "icon": "./resources/logo.svg"
				}
			]
        },
        "viewsWelcome": [
            {
              "view": "toitDeviceView",
              "contents": "No devices found.\n\nTry to login\n[Login](command:toit.ensureAuth)"
            }
        ],
        "commands": [
            {
                "command": "toit.refreshView",
                "enablement": "view == toitDeviceView",
                "title": "Toit: Refresh the list of devices.",
                "icon": "$(refresh)"
            },
            {
                "command": "toit.ensureAuth",
                "title": "Toit: Authenticate with toit.io."
            },
            {
                "command": "toit.devRun",
                "title": "Toit: Run a Toit app on a device.",
                "icon": "$(run)"
            },
            {
                "command": "toit.devDeploy",
                "title": "Toit: Deploy a Toit app on a device.",
                "icon": "$(run-all)"

            },
            {
                "command": "toit.serialProvision",
                "title": "Toit: Provision a device connected via serial."
            },
            {
                "command": "toit.serialMonitor",
                "title": "Toit: Monitor serial output from a device."
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "toit.refreshView",
                    "when": "view == toitDeviceView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "toit.devRun",
                    "when": "view == toitDeviceView && viewItem == device",
                    "group": "inline"
                },
                {
                    "command": "toit.devDeploy",
                    "when": "view == toitDeviceView && viewItem == device",
                    "group": "inline"
                }
            ],
            "editor/title": [
                {
                    "command": "toit.devRun",
                    "when": "resourceExtname == .toit",
                    "group": "navigation"
                }
            ]
        },
        "languages": [
            {
                "id": "toit",
                "aliases": [
                    "Toit",
                    "toit"
                ],
                "extensions": [
                    ".toit"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "toit",
                "scopeName": "source.toit",
                "path": "./syntaxes/toit.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Toit",
            "properties": {
                "toit.Path": {
                    "type": "string",
                    "default": "toit",
                    "description": "The path to the 'toit' command line tool."
                },
                "toitLanguageServer.toitPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "toit",
                    "description": "The path to the 'toit' command line tool."
                },
                "toitLanguageServer.arguments": {
                    "type": [
                        "string",
                        "null",
                        "array"
                    ],
                    "default": [
                        "tool",
                        "lsp"
                    ],
                    "description": "The arguments used to start the LSP server."
                },
                "toitLanguageServer.debug.clientToServer": {
                    "type": "boolean",
                    "default": false,
                    "description": "Write all messages from the client to the server into a `/tmp/debug_client_to_server-{date}.log` file."
                },
                "toitLanguageServer.shouldWriteReproOnCrash": {
                    "type": "boolean",
                    "default": false,
                    "description": "Generates a repro when the compiler crashes."
                },
                "toitLanguageServer.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the ToitLanguageServer service."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "tsc -p ./",
        "test-compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "lint": "eslint src --ext ts",
        "lint-fix": "eslint src --ext ts --fix"
    },
    "devDependencies": {
        "@types/node": "^8.10.61",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "@typescript-eslint/parser": "^4.24.0",
        "eslint": "^7.26.0",
        "js-yaml": "^3.14.0",
        "ts-loader": "^6.2.2",
        "tslint": "^5.20.1",
        "typescript": "^3.9.5",
        "vscode": "^1.1.37",
        "webpack": "^4.46.0",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "vsce": "^1.77.0",
        "vscode-languageclient": "^5.2.1"
    }
}
