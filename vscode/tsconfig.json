{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "types": ["jest"],
        "sourceMap": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "out",
        "src/**/*.js",
        "src/**/*.jsx"
    ]
}
